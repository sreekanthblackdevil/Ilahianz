<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/color_circle_blue"
        android:clickable="true"
        android:focusable="true"
        android:padding="3dp"
        android:src="@mipmap/men1"
        android:transitionName="imageTransition" />

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/class_users"
        android:background="@drawable/color_circle_green" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/profile_Image"
        android:text="Sreekanth"
        android:textColor="#000"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/class_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/username"
        android:text="C4A"
        android:textColor="#000"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:id="@+id/view_user"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_marginStart="50dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_marginTop="60dp"-->
    <!--android:layout_marginEnd="10dp"-->
    <!--android:background="#B5BBBBBB" />-->

    <TextView
        android:id="@+id/status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:text="online"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/profile_Image"
        android:text="Hey Ilahianz"
        android:textColor="@color/black"
        tools:ignore="HardcodedText" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignEnd="@+id/profile_Image"
        android:layout_alignBottom="@+id/profile_Image"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/green_circle"
        android:visibility="gone" />
</RelativeLayout>