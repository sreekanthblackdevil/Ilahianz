<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/user_item_bg"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_Image"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/developer" />

        <TextView
            android:textColor="#000"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profile_Image"
            android:text="Sreekanth"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/class_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/username"
            android:text="C4A"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/view_user"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:layout_marginStart="50dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginTop="60dp"-->
        <!--android:layout_marginEnd="10dp"-->
        <!--android:background="#B5BBBBBB" />-->

        <TextView
            android:id="@+id/status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="online"
            tools:ignore="HardcodedText" />

        <TextView
            android:padding="5dp"
            android:textColor="#000"
            android:id="@+id/last_mesg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_alignBottom="@+id/profile_Image"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/profile_Image"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/unread_mesg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/status_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/message_count"
            android:gravity="center"
            android:visibility="gone"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="HardcodedText" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignEnd="@+id/profile_Image"
            android:layout_alignBottom="@+id/profile_Image"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/green_circle"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>